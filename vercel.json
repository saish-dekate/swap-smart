{
  "version": 2,
  "builds": [
    {
      "src": "backend/vercel_wsgi.py",
      "use": "@vercel/python",
      "config": { "maxDuration": 30 }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/vercel_wsgi.py" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}